<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Exam RBS - Employees PayRoll - [ @ViewBag.Title ]</title>

    <!-- Bootstrap CSS -->
    <link href="~/Resources/Libraries/bootstrap-4.4.1.min.css" rel="stylesheet" />

    <link rel="stylesheet" href="//code.jquery.com/ui/1.12.1/themes/base/jquery-ui.css">
    <script src="~/Resources/Libraries/jquery-1.12.4.js"></script>
    <script src="~/Resources/Libraries/ui/1.12.1/jquery-ui.js"></script>
    <link href="~/Resources/Styles/LayoutStyles.css" rel="stylesheet" />
    <script src="~/Resources/Scripts/ExamGenericJS.js"></script>
</head>

<body>
    <!---------------------------------------- MainModal POPUP MESSAGE ---------------------------------------->
    <div class="modal fade" id="MainModalPopUpMessage" tabindex="-1" role="dialog" aria-labelledby="MainModalPopUpMessageLabel" aria-hidden="true" data-backdrop="static">
        <div class="modal-dialog" role="document">
            <div id="MainModalPopUpMessageContent" class="modal-content" style="width: 700px;">
                <div class="modal-header" style="background-color: rgba(205, 245, 105, 0.34)">
                    <table style="width: 100%;">
                        <tr>
                            <td style="width: 90%"><h5 class="modal-title" id="MainModalPopUpMessageLabel" style="color: #0e1481; font-size: 18pt;"><div id="MainModalPopUpMessageTitle" /></h5></td>
                            <td style="width: 10%"><button type="button" class="btn btn-link" data-dismiss="modal" style="color: #1f26a5;" id="MainModalPopUpMessageClose">Close</button></td>
                        </tr>
                    </table>
                </div>
                <div class="modal-body">
                    <table id='MainModalPopUpMessageTblBody' style="width: 100%;">
                        <tr>
                            <td id="MainModalPopUpMessage_Icon" style="width: 10%">
                                <center>
                                    <img id="MainModalPopUpMessageImage" src="" />
                                </center>
                            </td>
                            <td style="width: 10px;" id="MainModalPopUpMessage_Icon_Space">&nbsp;</td>
                            <td style="width: 90%; color: rgba(0, 0, 0, 0.58); font-weight: 600; font-size: 11pt;">
                                <div id="MainModalPopUpMessageText" />
                            </td>
                        </tr>
                    </table>
                </div>
            </div>
        </div>
    </div>
    <!---------------------------------------- END MainModal POPUP MESSAGE ---------------------------------------->

    <div style="width:100%; height: 70px; background-color: rgba(64, 165, 224, 0.43);">
        <table style="width: 100%;">
            <tr><td colspan="5" style="height: 10px; width: 100%;"></td></tr>
            <tr>
                <td style="width: 100%;">
                    <table style="width: 100%;">
                        <tr><td colspan="3" style="height: 5px;"></td></tr>
                        <tr>
                            <td style="width: 10%;"></td>
                            <td style="color: white; font-size: 11pt; font-weight: 600; width: 60%; text-align: left;">
                                @if(Session["UserLogged"] != null) 
                                { 
                                    <img src="@Url.Content("~/Resources/Images/btnImg_Boy_White.png")" style="width: 40px; height: 40px;" />
                                    @Html.Raw( string.Format("{0} - [ {1} ]", Session["UserLogged"], Session["RoleLogged"])) 
                                }                                
                            </td>
                            <td style="color: white; font-size: 18pt; font-weight: 600;">
                                Employees PayRoll
                            </td>
                        </tr>
                    </table>
                </td>
            </tr>
        </table>
    </div>
    <div style="height: 20px;"></div>
    <div class="container body-content" style="overflow-y: auto; ">
        @RenderBody()
    </div>
    <div class="container bd-footer-links" style="overflow-y: auto; ">
        <script>
            $(document).ready(InitializeComponents);

            function InitializeComponents()
            {
                //Initialize JS Utilities
                    JSObject = InitializeJSs();

                    $("#btnAboutMe").click(function () 
                    {
                        JSObject.ShowMessage("INFO", "Rodolfo Bernal Sánchez", "The current application is an exam made by <b>Rodolfo Bernal Sánchez</b>.");
                    });
                    
            }
        </script>

        <button id="btnAboutMe" type="button" class="btn btn-link" style="cursor: pointer;">About me</button>
    </div>
    <!-- Optional JavaScript -->
    <!-- jQuery first, then Popper.js, then Bootstrap JS -->
    <script src="~/Resources/Libraries/jquery-3.4.1.js"></script>
    <script src="~/Resources/Libraries/popper-1.16.0.min.js"></script>
    <script src="~/Resources/Libraries/bootstrap-4.4.1.min.js"></script>

    <!--Third providers-->
    <link href="~/Resources/Libraries/all.min.css" rel="stylesheet" />
    <script src="~/Resources/Libraries/shieldui-all.min.js"></script>
    <!--END Third providers-->
</body>
</html>
